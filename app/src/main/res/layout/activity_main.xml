            <Button
                android:id="@+id/btn_search_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="getSourceLocation"
                android:text="Clear"
                android:textColor="@color/textColor" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/DestinationLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:weightSum="3">



            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/search" />
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@drawable/round"
                android:id="@+id/img_round"
                android:layout_width="25dp"
                android:layout_height="25dp"/>






            <TextView
                android:id="@+id/edt_destination"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="@drawable/custom_edittext"
                android:onClick="getDestinationInflator"
                android:padding="10dp" />
            <EditText
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/custom_edittext"
                android:id="@+id/edt_round_route"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <!--<EditText
            android:id="@+id/edt_destination_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />-->
            <Button
                android:enabled="false"
                android:id="@+id/btn_destination_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="getDestinationLocation"
                android:text="Clear"
                android:textColor="@color/textColor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_clear_all"
                android:textColor="#ffffff"
                android:text="Clear All"
                android:background="@drawable/custom_btn_2"
                android:onClick="clearAll"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:id="@+id/btn_normal"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="Normal"
                android:background="@drawable/custom_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_round_routes"
                android:textColor="#ffffff"
                android:text="Round"
                android:background="@drawable/custom_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />


        </LinearLayout>




        <fragment

            android:layout_marginTop="10dp"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activities.MapsActivity" />


    </LinearLayout>

</LinearLayout>